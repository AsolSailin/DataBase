<Window x:Class="Wpf_Shop.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Shop.Windows"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid Background="#f3e9f7">
        <StackPanel>
            <TextBlock>Title</TextBlock>
            <TextBox x:Name="tbTitle"></TextBox>
            <TextBlock>Group</TextBlock>
            <TextBox x:Name="tbGroup"></TextBox>
            <TextBlock>Information</TextBlock>
            <TextBox x:Name="tbInfo"></TextBox>
            <TextBlock></TextBlock>
            <Button Click="SelectBtn_Click" Background="#cc9ede" Content="Select"></Button>
            <Button Click="AddBtn_Click_1" Background="#cc9ede" Content="Add"></Button>
        </StackPanel>
    </Grid>
</Window>
