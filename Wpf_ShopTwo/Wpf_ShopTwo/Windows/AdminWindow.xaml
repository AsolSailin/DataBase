<Window x:Class="Wpf_ShopTwo.Windows.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ShopTwo.Windows"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid Background="#f3e9f7">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button Click="AddIngredientsBtn_Click" Background="#cc9ede" Content="Add ingredients" Height="50"></Button>
            <Button Click="RecipeBtn_Click" Background="#cc9ede" Content="Create a recipe" Height="50"></Button>
            <Button Click="CookBtn_Click" Background="#cc9ede" Content="Cook" Height="50"></Button>
        </StackPanel>
    </Grid>
</Window>
